{
  "name": "projector-launcher",
  "version": "1.0.0",
  "description": "Desktop launcher for Projector, written in Kotlin, Electron and Node",
  "main": "",
  "scripts": {
    "start": "npm run build && npm run run",
    "build": "./gradlew build",
    "run": "cd ./build/js/packages/projector-launcher-electronapp && electron .",
    "gradle-node": "./gradlew -p electronapp jsNodeRun",
    "package": "electron-packager --executable-name=projector --out=./out --overwrite --icon=./src/assets/img/electron-icon.ico ./build/js/packages/projector-launcher-electronapp",
    "package-mac": "electron-packager --executable-name=projector --out=./out --overwrite --icon=./src/assets/img/electron-icon.icns  ./build/js/packages/projector-launcher-electronapp projector",
    "copy-deps-mac": "ncp \"./build/js/node_modules\" \"./out/projector-darwin-x64/projector.app/Contents/Resources/app/node_modules\""
  },
  "keywords": [
    "projector",
    "jetbrains",
    "kotlin",
    "kotlin-js"
  ],
  "author": "projector",
  "license": "MIT",
  "dependencies": {
    "kotlin": "^1.4.10"
  },
  "devDependencies": {
    "cpx": "^1.5.0",
    "electron-packager": "^15.1.0",
    "ncp": "^2.0.0"
  }
}
